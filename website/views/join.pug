
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Join Us - Economics Society
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/daisyui@4.4.24/dist/full.min.css" type="text/css")
    script(src="https://cdn.tailwindcss.com") 
    style. 
          input,
          textarea {
          background-color: rgba(250,250,250,0.9);
          width:350px;
          
          font-size: 18px;
          padding: 10px 10px 10px 5px;
          display: block;
          
          border: none;
          border-radius: 0;
          border-bottom: 2px solid
          }

          input:focus,textarea:focus {
              outline: none;
          }
          textarea{
            width:300px;
            height:420px;
          }
          
          




  body
    include navbar
    if (success)
            .alert.alert-success(role="alert", id="successAlert")
                svg(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24")
                    path(d="M9 12l2 2 4-4")
                span Your update was successful!
    else if (error)
            // Show error alert
            .alert.alert-error(role="alert", id="errorAlert")
                svg(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24")
                    path(d="M6 18L18 6M6 6l12 12")
                p= error   
    .container.mx-auto.my-8(style="margin-left:39%;")
      h2.text-3xl.font-bold.text-blue-500(style="margin-bottom:10px;") Join Surrey Economics Society
      h3.font-bold(style = "letter-spacing:1.2px;") Become our member now 
      form( action="/join", method="post",style="margin-top:10px; ")
        label(for="firstName") URN*: 
        input(type="text", name="urn", style = "border-radius:2px;margin-top:5px;" required)
        br
        label(for="firstName") First Name*: 
        input(type="text", name="firstName",style = "border-radius:2px;margin-top:5px;" required)
        br 
        label(for="lastName") Last Name*: 
        input(type="text", name="lastName",style = "border-radius:2px;margin-top:5px;" required)
        br
        label(for="dob") Date of Birth: 
        input(type="date", name="dob" style = "border-radius:2px;margin-top:5px;")
        br
        label(for="phone") Phone Number: 
        input(type="text", name="phone" style = "border-radius:2px;margin-top:5px;",placeholder="12 digit number")
        br
        label(for="course") Course*: 
        input(type="text", name="course",style = "border-radius:2px;margin-top:5px;" required)
        br
        label(for="type") Student Type (UG/PG): 
        input(type="text", name="type" style = "border-radius:2px;margin-top:5px;")
        br
        button.btn.btn-ternary(type="submit", style="margin-top:5px; color:black;font-size:18px;") Join
